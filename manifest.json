{
  "name":"SEARCHive",
  "version":"0.1",
  "description": "Chrome extension which helps search the link with major web archive providers such as archive.today(archive.is) and Internet Archive(archive.org)",
  "manifest_version":3,

  "icons": {
    "16": "icon-19.png",
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "action":{
    "default_icon":{
      "19":"icon-19.png",
      "38":"icon-38.png"
    }
  },
  "minimum_chrome_version": "93",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions":[
    "tabs",
    "contextMenus",
    "storage"
  ]
}
